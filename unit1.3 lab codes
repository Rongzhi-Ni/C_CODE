//
//  while_over5.c
//
//  Prints out the array elements if their value is between 5 and 10
//
//  Created by M. Califano on 25/09/2015.

// include standard i/o library for scanf and printf
#include <stdio.h>

int main() {
    int array[] = {1, 7, 4, 5, 9, 3, 5, 11, 6, 3};
    int i = 0;

    while (i < 10) {
        /* your code goes here */

        printf("%d\n", array[i]);
        i++;
    }

    return 0;
}












//
//  DoWhile.c

//
//  Prints out the sum of numbers less than 10

//
//  Created by Craig A. Evans on 06/02/2014.


// include standard i/o library for scanf and printf

#include <stdio.h>


int main(void) {
    
    
int sum = 0;   // variable to store sum, initialised to 0
    
int i = 0;     // counter for the number of loops, initialised to 0

    
do {
        
        sum = sum + i;  // add i to sum and store back in sum.  Can also do sum+=i;
        
	i=i+1;          // increment i by 1.  Can also do i++;
        
	printf("i = %d sum = %d\n",i,sum);  // print out i and sum for debugging
    
}while (i < 10);
    
    
printf("Sum = %d\n",sum);  // print final sum
    
    
return 0;
    

}









//
//  for_list1_10.c
//
//  Prints out the numbers 1 to 10
//
//  Created by M. Califano on 25/09/2015.

// include standard i/o library for scanf and printf
#include <stdio.h>

int main(void) { 

   int i;   // counter for the number of loops
   for (i = 1; i < 11; i++) 
   {
    printf("%d\n", i);  // print out i
   }
  
  return 0;
  
}




















